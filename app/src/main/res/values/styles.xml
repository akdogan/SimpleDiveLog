<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.SimpleDiveLog.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">@dimen/text_input_fields_margin</item>
        <item name="android:layout_marginEnd">@dimen/text_input_fields_margin</item>
        <item name="android:layout_marginTop">@dimen/text_input_fields_margin</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1
        </item> <!-- Premade set, see https://material.io/develop/android/theming/typography for more -->
    </style>

    <style name="Widget.SimpleDiveLog.LinearProgressIndicator" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="indicatorColor">?attr/colorPrimaryVariant</item>

    </style>


    <style name="DetailViewContentField" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">24dp</item>
    </style>

    <style name="DetailViewDescriptionField" parent="DetailViewContentField">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">24dp</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.FullscreenSplash" parent="@style/Theme.SimpleDiveLog.NoActionBar">


        <item name="colorPrimaryDark">@color/ocean_blue</item>
        <item name="android:windowBackground">@drawable/launch_screen_drawable</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.SimpleDiveLog.PreferenceStyle" parent="@style/Theme.SimpleDiveLog">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>


</resources>