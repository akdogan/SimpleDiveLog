<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory
        app:title="@string/units_header">


        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="@string/pref_depth_unit_key"
            app:summaryOff="@string/pref_depth_unit_summary_off"
            app:summaryOn="@string/pref_depth_unit_summary_on"
            app:title="@string/pref_depth_unit_label" />

        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="@string/pref_pressure_unit_key"
            app:summaryOff="@string/pref_pressure_unit_summary_off"
            app:summaryOn="@string/pref_pressure_unit_summary_on"
            app:title="@string/pref_pressure_unit_label" />

    </PreferenceCategory>

</PreferenceScreen>